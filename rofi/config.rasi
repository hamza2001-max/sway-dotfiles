configuration {
    modi: "drun,run";
    font: "JetBrainsMono Nerd Font 12";
    show-icons: true;
    icon-theme: "Tela";
    drun-display-format: "{icon} {name}";
    display-drun: "drun ";
    display-run: "run ";
    location: 0;
    disable-history: false;
    sidebar-mode: true;
    
    timeout {
        action: "kb-cancel";
        delay:  0;
    }
    
    filebrowser {
        directories-first: true;
        sorting-method:    "name";
    }
}

@theme "spotlight"
